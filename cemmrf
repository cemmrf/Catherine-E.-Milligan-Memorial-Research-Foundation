   <!-- JavaScript for Mobile Menu and Read More functionality -->
   <script>
       // Mobile menu functionality
       const mobileMenuButton = document.getElementById('mobile-menu-button');
       const mobileMenu = document.getElementById('mobile-menu');
       mobileMenuButton.addEventListener('click', () => {
           mobileMenu.classList.toggle('hidden');
       });


       // Read More functionality for research projects and Catherine's bio
       const readMoreButtons = document.querySelectorAll('.read-more-btn');
       readMoreButtons.forEach(button => {
           button.addEventListener('click', () => {
               const targetId = button.dataset.target;
               const fullText = document.getElementById(targetId);
              
               if (fullText.classList.contains('hidden')) {
                   fullText.classList.remove('hidden');
                   button.textContent = 'Read Less';
               } else {
                   fullText.classList.add('hidden');
                   button.textContent = 'Read More';
               }
           });
       });


       // Donation Modal functionality
       const donateButton = document.getElementById('donate-button');
       const donationModal = document.getElementById('donation-modal');
       const closeModalBtn = document.getElementById('close-modal-btn');


       // Show the modal when the donate button is clicked
       donateButton.addEventListener('click', (e) => {
           e.preventDefault(); // Prevent the anchor tag from navigating
           donationModal.classList.remove('hidden');
       });


       // Hide the modal when the close button is clicked
       closeModalBtn.addEventListener('click', () => {
           donationModal.classList.add('hidden');
       });


       // Hide the modal when clicking outside the modal content
       donationModal.addEventListener('click', (e) => {
           if (e.target === donationModal) {
               donationModal.classList.add('hidden');
           }
       });
   </script>
